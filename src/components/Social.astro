---
const { platform, username } = Astro.props;
---

<a class="solidBtn" href={`https://www.${platform}.com/${username}`}
  >{platform}</a
>

<style>
  .solidBtn {
    padding: 0.5rem 1rem;
    color: white;
    background-color: var(--primary);
    text-decoration: none;
    border-radius: 10px;
  }
</style>
